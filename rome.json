{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "ignore": [
      "node_modules/",
      "dist/"
    ]
  },
  "linter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "all"
    }
  }
}